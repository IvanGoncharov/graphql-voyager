{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2021",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noEmit": true,
    "pretty": true,
    "lib": ["es2022", "dom", "dom.iterable"],
    "jsx": "react-jsx"
  },
  "compileOnSave": false,
  "exclude": ["node_modules", ".tmp", "dist", "demo-dist", "worker-dist"],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./manual-types.d.ts",
    "demo/**/*.ts",
    "tests/**/*.ts",
    "scripts/**/*.ts",
    "playwright.config.ts",
    "webpack.config.ts",
    "webpack-demo.config.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
